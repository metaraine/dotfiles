" === Raine's custom gvimrc ============================================

" start window maximized
"au GUIEnter * simalt ~x

" set initial window size
set	lines=42
set	columns=129

" turn off annoying visual beep
set	noerrorbells
set	vb
set	t_vb=	

" override <M-h> for alternate movement
imap	<M-h>	<Left>

